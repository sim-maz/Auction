
@model IEnumerable<Auction.Mvc.Models.BidDto>
@{
    Layout = null;
}


<h2>Bids</h2>

<p>

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BidTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="table-row">
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BidTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User)
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", "Bids", new { id = item.Id }, htmlAttributes: new { @class = "k-button", id = "confirmation" })
            </td>
        </tr>
    }

</table>

@section AdminSideBar{

    <div class="k-button nav-button">
        @Ajax.ActionLink(
        "Market [A]",
        "Markets",
        "Admin",
        new AjaxOptions { UpdateTargetId = "result" }
    )
    </div>
    <div class="k-button nav-button">
        @Ajax.ActionLink(
        "Product [A]",
        "Products",
        "Admin",
        new AjaxOptions { UpdateTargetId = "result" }
    )
    </div>
    <div class="k-button nav-button">
        @Ajax.ActionLink(
        "Comment [A]",
        "Comments",
        "Admin",
        new AjaxOptions { UpdateTargetId = "result" }
    )
    </div>
<div class="k-button nav-button">
    @Ajax.ActionLink(
        "Bids [A]",
        "Bids",
        "Admin",
        new AjaxOptions { UpdateTargetId = "result" }
    )
</div>

}
