@model IEnumerable<Auction.Domain.Product>
@{
    Layout = null;
}

<h2>Products</h2>

<p>
    @Html.ActionLink("Create New", "Create", "Products", null, htmlAttributes: new { @class="k-button"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartBid)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Duration)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndTime)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="table-row">
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartBid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndTime)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", "Products", new { id = item.Id }, htmlAttributes: new { @class = "k-button" }) |
                @Html.ActionLink("Details", "Details", "Products", new { id = item.Id }, htmlAttributes: new { @class="k-button" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, htmlAttributes: new { @class = "k-button" })
            </td>
        </tr>
    }

</table>

@section AdminSideBar{

    <div class="k-button nav-button">
        @Ajax.ActionLink(
        "Market [A]",
        "Markets",
        "Admin",
        new AjaxOptions { UpdateTargetId = "result" }
    )
    </div>
    <div class="k-button nav-button">
        @Ajax.ActionLink(
        "Product [A]",
        "Products",
        "Admin",
        new AjaxOptions { UpdateTargetId = "result" }
    )
    </div>
    <div class="k-button nav-button">
        @Ajax.ActionLink(
        "Comment [A]",
        "Comments",
        "Admin",
        new AjaxOptions { UpdateTargetId = "result" }
    )
    </div>
    <div class="k-button nav-button">
    @Ajax.ActionLink(
        "Bids [A]",
        "Bids",
        "Admin",
        new AjaxOptions { UpdateTargetId = "result" }
    )
    </div>

}
