@model Auction.Domain.Product

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_CleanLayout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal k-content">

        <h4>Edit</h4>
        <hr />

        <div class="details-div details-div-col-1 ">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                Product Name
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "k-textbox" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                Auction
                <div class="col-md-10">
                    @Html.DropDownList("MarketsList", null, htmlAttributes: new { @class = "k-item k-input dropdown-list", @Name = "MarketName" })
                </div>
            </div>
            <div class="form-group">
                <span class="control-label col-md-2">
                    Image path
                </span>
                <div>
                    <input class="k-textbox" id="ImagePath" name="ImagePath" type="text" value="@ViewBag.ImgPath" />
                </div>
            </div>
        </div>
        <div class="details-div details-div-col-2">
            <div class="form-group">
                Category
                <div class="col-md-10">
                    @Html.DropDownList("CategoriesList", null, htmlAttributes: new { @class = "k-item k-input dropdown-list", @Name = "CategoryName" })
                    @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Starting Bid
                <div class="col-md-10">
                    @Html.EditorFor(model => model.StartBid, new { htmlAttributes = new { @class = "k-textbox" } })
                    @Html.ValidationMessageFor(model => model.StartBid, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                Bid Duration
                <div class="col-md-10">
                    <select name="Duration" id="Duration" class="k-item k-input option-list" required>
                        <option value="0">Market</option>
                        <option value="1">1 Day</option>
                        <option value="3">3 Days</option>
                        <option value="5">5 Days</option>
                        <option value="7">7 Days</option>
                        <option value="10">10 Days</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div>
                <p class="control-label col-md-2" style="margin-top: 5px;">
                    Description
                </p>
                @Html.TextAreaFor(model => model.Description, new { htmlAttributes = new { @class = "k-textbox description-box" } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input name="StartTime" type="hidden" value="@Html.DisplayFor(model => model.StartTime)" />
            <input name="EndTime" type="hidden" value="@Html.DisplayFor(model => model.EndTime)" />
            <input type="submit" value="Save" class="btn k-button" /> | @Html.ActionLink("Back to List", "Index", "Admin", null, htmlAttributes: new { @class = "k-button" })

        </div>
    </div>


}

