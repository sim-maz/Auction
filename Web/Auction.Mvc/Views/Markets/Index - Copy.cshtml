@model IEnumerable<Auction.Domain.Market>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_CleanLayout.cshtml";
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="table-div">
  
     <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MarketStart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MarketEnd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MarketType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MarketStatus)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MarketStart)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MarketEnd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MarketType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MarketStatus)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "k=button" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "k=button" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "k=button" })
                </td>
            </tr>
        }

    </table>
</div>

